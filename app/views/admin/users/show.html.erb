<div class="container">
  <div class="row">
    <div class="col-md-5">
      <table class="table">
        <br>
        <thead>
          <tr>
          <td><%= @user.name %>さんの会員照会</td>
          </tr>
        </thead>

        <tbody>
          <tr><td>会員ID</td><td><%= @user.id %></td></tr>
          <tr><td>ニックネーム</td><td><%= @user.name %></td></tr>
          <tr><td>会員ステータス</td>
              <td>
                <% if @user.is_deleted == false %>
                有効
                <% else %>
                退会
                <% end %>
              </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= link_to "登録情報編集", edit_admin_user_path(@user.id) %>
    </div>
  </div>

  <br>
  <h3>投稿記事一覧</h3>

  <div class="row">
    <% @skis.each do |ski| %>
    <div class="col-lg-3 col-md-12 mb-4">
      <%= link_to admin_ski_path(ski.id) do%>
        <p><%= image_tag ski.get_image(100,100) %></p>
      <% end %>
      <p><%= ski.title %></p>
    </div>
    <% end %>
  </div>
</div>
