<div class="container">
  <div class="row">
    <div class="col-md-7">
      <br>
      <h2><%= @user.name%>さんの会員情報編集</h2>
      <br>
      <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
      <br>

      <p>プロフィール画像</p>
      <p><%= f.file_field :image, accept: "image/*" %></p>

      <p>ニックネーム</p>
      <p>
        <%= f.text_field :name %>
      </p>

      <p>メールアドレス</p>
      <p>
        <%= f.email_field :email %>
      </p>

      <p>販売ステータス</p>
      <p>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効", {value: true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "退会", {value: false, style: "display: inline-block;"} %>
      </p>
      <br>
      <p><%= f.submit '変更を保存' %></p>
      <% end %>
    </div>
  </div>
</div>
