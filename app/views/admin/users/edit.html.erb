<div class="container">
  <div class="row">
    <div class="col-md-7">
      <table class="table">
        <thead>
          <tr>
            <td><%= @user.name%>さんの会員情報編集</td>
          </tr>
        </thead>

        <tbody>
          <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
          <tr>
            <td>プロフィール画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>

          <tr>
            <td>ニックネーム</td>
            <td>
              <%= f.text_field :name %>
            </td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td>
              <%= f.email_field :email %>
            </td>
          </tr>

          <tr>
            <td>販売ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効", {value: true, style: "display: inline-block;"} %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会", {value: false, style: "display: inline-block;"} %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-5 offset-md-2">
    <p><%= f.submit '変更を保存' %></p>
  </div>
  <% end %>
</div>
