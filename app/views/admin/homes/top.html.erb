<div class="container">
  <div class="row">
    <div class="col-md-7 offset-md-1">
      <br>
      <h2>申請ジャンル一覧</h2>
      <br>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンルID</th>
            <th>ジャンル名</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.id %>
            </td>

            <td>
              <%= link_to genre.name, admin_genre_path(genre.id) %>
            </td>

            <td>
              <% if genre.is_registration == false%>
              申請中
              <% else %>
              承認済み
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


