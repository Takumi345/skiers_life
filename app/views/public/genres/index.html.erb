<div class="container">
  <div class="row">
    <div class="col-md-7">
      <br>
      <h2>ジャンル一覧</h2>
      <br>
    </div>

    <div class="col-md-7 offset-md-1">
      <%= link_to "新規ジャンル申請", new_public_genre_path %>
      <br>
      <br>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>

            <td><%= image_tag genre.get_image(100,100) %></td>

            <td>
              <%= link_to public_genre_path(genre.id) do %>
              <%= genre.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>

