<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h1>新規投稿</h1>
    </div>

    <div class="col-md-7 offset-md-2">
  <%= form_with model: @ski, url: public_skis_path do |f| %>

    <p>ジャンル
      <%= f.collection_select(:genre_id, @genre, :id, :name) %>
    </p>

    <p>画像
      <%= f.file_field :image, accept: "image/*" %>
    </p>

    <p>タイトル
      <%= f.text_field :title %>
    </p>

    <p>説明
      <%= f.text_area :body %>
    </p>

    <p><%= f.submit '新規登録' %></p>
  <% end %>
</div>