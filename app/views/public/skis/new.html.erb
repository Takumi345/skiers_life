<div class="container">
  <div class="row">
    <div class="col-md-7">
      <br>
      <h2>新規投稿</h2>
    </div>

    <div class="col-md-7 offset-md-1">

      <% if @ski.errors.any? %>
        <%= @ski.errors.count %>件のエラーが発生しました
        <ul>
          <% @ski.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @ski, url: public_skis_path do |f| %>
      <br>
      <p>ジャンル
        <%= f.collection_select(:genre_id, @genre, :id, :name) %>
      </p>
      <br>

      <p>画像
        <%= f.file_field :image, accept: "image/*" %>
      </p>
      <br>

      <p>タイトル
        <%= f.text_field :title %>
      </p>
      <br>

      <p>説明
        <%= f.text_area :body %>
      </p>
      <br>

      <p><%= f.submit '新規登録' %></p>
      <% end %>
</div>