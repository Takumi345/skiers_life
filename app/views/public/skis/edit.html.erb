<div class="container">
  <div class="row">
    <div class="col-md-4">
      <br>
      <h2>投稿編集</h2>
      <%= form_with model: @ski, url: public_ski_path do |f| %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-1">
      <br>
      <p>ジャンル
        <%= f.collection_select(:genre_id, @genres, :id, :name) %>
      </p>
      <br>

      <p>画像
        <%= f.file_field :image, accept: "image/*" %>
      </p>
      <br>

      <p>タイトル
        <%= f.text_field :title %>
      </p>
      <br>

      <p>説明
        <%= f.text_area :body %>
      </p>
      <br>

      <p><%= f.submit '編集' %></p>
      <% end %>
    </div>
  </div>
</div>