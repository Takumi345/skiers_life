<div class="container">
  <div class="row">
    <div class="col-md-7">
      <br>

      <h2>会員情報編集</h2>
      <br>
      <%= form_with model: @user, url: public_user_path(@user) do |f| %>

      <p>プロフィール画像
        <%= f.file_field :image, accept: "image/*" %>
      </p>
      <br>

      <p>
        ニックネーム
        <%= f.text_field :name %>
      </p>
      <br>

      <p>
        メールアドレス
        <%= f.email_field :email %>
      </p>
      <br>

      <p><%= f.submit '変更を保存' %></p>
      <% end %>

      <%= link_to "退会する", public_users_confirm_path %></p>

    </div>
  </div>
</div>