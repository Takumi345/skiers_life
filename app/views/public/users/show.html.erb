<h1><%= @user.name %>さんの投稿一覧</h1>

<% if current_user.following?(user) %>
  <%= link_to "フォロー外す", public_users_relationships(user.id), method: :delete %>
<% else %>
  <%= link_to "フォローする", public_users_relationships(user.id), method: :post %>
<% end %>

  <% @skis.each do |ski| %>
    <div class="col-lg-2 col-md-6 mb-4">
      <%= link_to public_ski_path(ski.id) do%>
      <p><% image_tag ski.get_image(100,100) %></p>
      <% end %>
      <p><%= ski.title %></p>
    </div>
  <% end %>
